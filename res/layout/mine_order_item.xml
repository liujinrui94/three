<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="订单状态" />
        <TextView android:id="@id/myorder_order_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="已取消,未付款,未发货" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="订单金额" />
        <TextView android:id="@id/myorder_total_fee" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="￥789.00元" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:id="@id/order_goods_logo" android:layout_width="120.0dip" android:layout_height="80.0dip" android:layout_marginLeft="3.0dip" android:scaleType="fitXY" />
        <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <TextView android:id="@id/goods_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="hiyoga" />
            <RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:id="@id/goods_attr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="尺码颜色" />
                <TextView android:id="@id/goods_sn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="sn" android:layout_toRightOf="@id/goods_attr" />
                <TextView android:id="@id/goods_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="价格" android:layout_alignParentRight="true" />
            </RelativeLayout>
            <RelativeLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                <TextView android:id="@id/myorder_order_sn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="订单号" />
                <TextView android:id="@id/goods_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="数目" android:layout_alignParentRight="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>