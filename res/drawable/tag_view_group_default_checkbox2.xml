<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:color="@color/white">
        <shape android:shape="rectangle">
            <padding android:left="@dimen/margin_normal" android:top="@dimen/margin_small_6" android:right="@dimen/margin_normal" android:bottom="@dimen/margin_small_6" />
            <solid android:color="@color/red" />
            <corners android:radius="@dimen/corner_radius" />
            <stroke android:width="@dimen/line" android:color="@color/red" />
        </shape>
    </item>
    <item android:state_pressed="true" android:color="@color/white">
        <shape android:shape="rectangle">
            <padding android:left="@dimen/margin_normal" android:top="@dimen/margin_small_6" android:right="@dimen/margin_normal" android:bottom="@dimen/margin_small_6" />
            <solid android:color="@color/red" />
            <corners android:radius="@dimen/corner_radius" />
            <stroke android:width="@dimen/line" android:color="@color/red" />
        </shape>
    </item>
    <item android:state_checked="false" android:color="@color/red">
        <shape android:shape="rectangle">
            <padding android:left="@dimen/margin_normal" android:top="@dimen/margin_small_6" android:right="@dimen/margin_normal" android:bottom="@dimen/margin_small_6" />
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/corner_radius" />
            <stroke android:width="@dimen/line" android:color="@color/red" />
        </shape>
    </item>
    <item android:color="@color/red">
        <shape android:shape="rectangle">
            <padding android:left="@dimen/margin_normal" android:top="@dimen/margin_small_6" android:right="@dimen/margin_normal" android:bottom="@dimen/margin_small_6" />
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/corner_radius" />
            <stroke android:width="@dimen/line" android:color="@color/red" />
        </shape>
    </item>
</selector>