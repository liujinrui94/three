<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:color="@color/white">
        <shape android:shape="oval" android:useLevel="false">
            <padding android:left="@dimen/margin_little" android:top="@dimen/margin_tiny" android:right="@dimen/margin_little" android:bottom="@dimen/margin_tiny" />
            <solid android:color="@color/red" />
            <size android:height="@dimen/margin_large" android:width="@dimen/margin_large" />
            <stroke android:width="@dimen/line" android:color="@color/red" />
        </shape>
    </item>
    <item android:state_checked="false" android:color="@color/red">
        <shape android:shape="oval" android:useLevel="false">
            <padding android:left="@dimen/margin_little" android:top="@dimen/margin_tiny" android:right="@dimen/margin_little" android:bottom="@dimen/margin_tiny" />
            <solid android:color="@color/white" />
            <size android:height="@dimen/margin_large" android:width="@dimen/margin_large" />
            <stroke android:width="@dimen/line" android:color="@color/red" />
        </shape>
    </item>
    <item android:color="@color/red">
        <shape android:shape="oval" android:useLevel="false">
            <padding android:left="@dimen/margin_little" android:top="@dimen/margin_tiny" android:right="@dimen/margin_little" android:bottom="@dimen/margin_tiny" />
            <solid android:color="@color/white" />
            <size android:height="@dimen/margin_large" android:width="@dimen/margin_large" />
            <stroke android:width="@dimen/line" android:color="@color/red" />
        </shape>
    </item>
</selector>